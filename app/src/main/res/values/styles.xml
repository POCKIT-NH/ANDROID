<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/nanum_gothic</item>
    </style>

    <style name="TextAppearance.CategoryTab" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Widget.CategorySearch" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">39sp</item>
        <item name="android:lineSpacingExtra">11sp</item>
        <item name="boxStrokeColor">@color/border_category_search</item>
    </style>
    
    <style name="Widget.Pay.Input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontWeight">700</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:lineSpacingExtra">3.8sp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.KitDetailTab" parent="TextAppearance.Design.Tab">
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>