<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_password"
    tools:context=".ui.password.PasswordActivity">

    <EditText
        android:id="@+id/password_first"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:lineSpacingExtra="10.3sp"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textFontWeight="700"
        android:textSize="35.5sp"
        app:layout_constraintEnd_toStartOf="@id/password_second"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/password_second"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:lineSpacingExtra="10.3sp"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textFontWeight="700"
        android:textSize="35.5sp"
        app:layout_constraintEnd_toStartOf="@id/password_third"
        app:layout_constraintStart_toEndOf="@id/password_first"
        app:layout_constraintTop_toTopOf="@id/password_first" />

    <EditText
        android:id="@+id/password_third"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:lineSpacingExtra="10.3sp"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textFontWeight="700"
        android:textSize="35.5sp"
        app:layout_constraintEnd_toStartOf="@id/password_fourth"
        app:layout_constraintStart_toEndOf="@id/password_second"
        app:layout_constraintTop_toTopOf="@id/password_second" />

    <EditText
        android:id="@+id/password_fourth"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:lineSpacingExtra="10.3sp"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textFontWeight="700"
        android:textSize="35.5sp"
        app:layout_constraintEnd_toStartOf="@id/password_fifth"
        app:layout_constraintStart_toEndOf="@id/password_third"
        app:layout_constraintTop_toTopOf="@id/password_third" />

    <EditText
        android:id="@+id/password_fifth"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:lineSpacingExtra="10.3sp"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textFontWeight="700"
        android:textSize="35.5sp"
        app:layout_constraintEnd_toStartOf="@id/password_sixth"
        app:layout_constraintStart_toEndOf="@id/password_fourth"
        app:layout_constraintTop_toTopOf="@id/password_fourth" />

    <EditText
        android:id="@+id/password_sixth"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.7"
        android:lineSpacingExtra="10.3sp"
        android:lines="1"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textFontWeight="700"
        android:textSize="35.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/password_fifth"
        app:layout_constraintTop_toTopOf="@id/password_fifth" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_pad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="182dp"
        android:background="@drawable/bg_password_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="4.8sp"
            android:text="간편 비밀번호를 입력해주세요"
            android:textColor="#50b27d"
            android:textFontWeight="700"
            android:textSize="16.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="1"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintEnd_toStartOf="@id/two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="2"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintEnd_toStartOf="@id/three"
            app:layout_constraintStart_toEndOf="@id/one"
            app:layout_constraintTop_toTopOf="@id/one" />

        <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="3"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/two"
            app:layout_constraintTop_toTopOf="@id/two" />

        <TextView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="4"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintStart_toStartOf="@id/one"
            app:layout_constraintTop_toBottomOf="@id/one" />

        <TextView
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="5"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintStart_toStartOf="@id/two"
            app:layout_constraintTop_toTopOf="@id/four" />

        <TextView
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="6"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintStart_toStartOf="@id/three"
            app:layout_constraintTop_toTopOf="@id/five" />


        <TextView
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="7"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintStart_toStartOf="@id/four"
            app:layout_constraintTop_toBottomOf="@id/four" />


        <TextView
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="8"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintStart_toStartOf="@id/five"
            app:layout_constraintTop_toTopOf="@id/seven" />

        <TextView
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="9"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintStart_toStartOf="@id/six"
            app:layout_constraintTop_toTopOf="@id/eight" />

        <TextView
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:fontFamily="@font/nanum_gothic"
            android:lineSpacingExtra="10.3sp"
            android:text="0"
            android:textColor="#767676"
            android:textFontWeight="700"
            android:textSize="35.5sp"
            app:layout_constraintStart_toStartOf="@id/eight"
            app:layout_constraintTop_toBottomOf="@id/eight" />

        <ImageButton
            android:id="@+id/erase"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_erase"
            app:layout_constraintBottom_toBottomOf="@id/zero"
            app:layout_constraintEnd_toEndOf="@id/nine"
            app:layout_constraintTop_toTopOf="@id/zero" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>