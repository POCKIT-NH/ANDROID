<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="24dp"
    android:background="@drawable/white_background_round10"
    android:elevation="20dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <ImageView
        android:id="@+id/imgStory"
        android:layout_width="0dp"
        android:layout_height="351dp"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtStoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20-30대 청년 농부의"
        android:textColor="@color/colorBlack"
        android:textFontWeight="600"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/imgStory" />

    <TextView
        android:id="@+id/txtStoryTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="땀과 노력의 결실을 맺다"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/txtStoryTitle" />

    <TextView
        android:id="@+id/txtStoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020.12.12"
        android:textColor="@color/colorGrey05"
        android:textSize="12sp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/txtStoryTitle2" />

    <ImageView
        android:id="@+id/imgIcVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_like_fill"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtStoryDate"
        app:layout_constraintEnd_toStartOf="@+id/txtStoryVisit"
        app:layout_constraintTop_toTopOf="@+id/txtStoryDate" />

    <TextView
        android:id="@+id/txtStoryVisit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgIcVisit"
        app:layout_constraintEnd_toStartOf="@+id/guideline2" />

</androidx.constraintlayout.widget.ConstraintLayout>